<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: linear-gradient(to right, #90caf9, #42a5f5); -fx-padding: 5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.foxer.erpstock.controller.ToolbarController">

    <children>
        <Button fx:id="btnStock" onAction="#onStockClicked" style="-fx-background-color: transparent;" text="Stav skladu">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
        <Button fx:id="btnIncome" onAction="#onIncomeClicked" style="-fx-background-color: transparent;" text="Príjem">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
        <Button fx:id="btnOutcome" onAction="#onOutcomeClicked" style="-fx-background-color: transparent;" text="Výdaj">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </children>
</HBox>
