<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.foxer.erpstock.controller.stockin.SupplierDetailController"
            styleClass="anchor-pane">

    <children>
        <VBox spacing="10"
              AnchorPane.topAnchor="10"
              AnchorPane.rightAnchor="10"
              AnchorPane.leftAnchor="10">


            <VBox spacing="12" maxWidth="800" styleClass="inner-box">
                <Label text="Dodávateľ"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1565c0;" />

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                        <ColumnConstraints hgrow="NEVER"/>
                    </columnConstraints>

                    <children>
                        <Label text="Názov:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="valName" GridPane.columnIndex="1" text="-" styleClass="label-grey"/>

                        <Label text="Adresa:" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                        <Label fx:id="valAddress" GridPane.columnIndex="1" GridPane.rowIndex="1" text="-" styleClass="label-grey"/>

                        <Label text="Kontakt:" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                        <HBox GridPane.columnIndex="1" GridPane.rowIndex="2" spacing="6" alignment="CENTER_LEFT">
                            <children>
                                <Label fx:id="valContact" text="-" styleClass="label-grey"/>
                                <Button fx:id="btnCopyContact" styleClass="copy-button" onAction="#handleCopyContact">
                                    <graphic><FontIcon iconLiteral="fas-copy" iconSize="12"/></graphic>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </GridPane>

                <HBox alignment="CENTER_RIGHT">
                    <Button fx:id="btnToggleIncomes"
                            text="Zobraziť príjmy"
                            styleClass="copy-button"
                            onAction="#handleToggleIncomes"/>
                </HBox>
            </VBox>

            <!-- tu sa vloží tabuľka z druhého FXML -->
            <VBox fx:id="incomesContainer" visible="false" managed="false"/>
        </VBox>
    </children>
</AnchorPane>
