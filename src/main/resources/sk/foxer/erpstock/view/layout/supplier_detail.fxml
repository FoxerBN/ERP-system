<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.foxer.erpstock.controller.stockin.SupplierDetailController"
            style="-fx-background-color: #f5f7fa; -fx-padding: 20;">
    <children>
        <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"
              style="-fx-background-color: white; -fx-padding: 20;  -fx-background-radius: 10;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);">

            <Label text="Dodávateľ" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1565c0;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <children>
                    <Label text="Názov:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="valName" GridPane.columnIndex="1" text="-" />

                    <Label text="Adresa:" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <Label fx:id="valAddress" GridPane.columnIndex="1" GridPane.rowIndex="1" text="-" />

                    <Label text="Kontakt:" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                    <Label fx:id="valContact" GridPane.columnIndex="1" GridPane.rowIndex="2" text="-" />
                </children>
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
