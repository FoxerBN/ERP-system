<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.foxer.erpstock.controller.stock.StockMasterController"
            styleClass="master-pane">
    <children>
        <VBox spacing="14"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20"
              styleClass="master-content">
            <Label text="Správa produktov"
                   styleClass="master-title"/>
            <Button fx:id="btnAddProduct"
                    text="Pridať produkt"
                    onAction="#handleAddProduct"
                    prefWidth="200"
                    styleClass="master-button"
                    contentDisplay="LEFT"
                    graphicTextGap="10">
                <graphic>
                    <FontIcon iconLiteral="fas-plus" iconSize="14"/>
                </graphic>
            </Button>
            <Button fx:id="btnRemoveProduct"
                    text="Odstrániť produkt"
                    onAction="#handleRemoveProduct"
                    prefWidth="200"
                    styleClass="master-button"
                    contentDisplay="LEFT"
                    graphicTextGap="10">
                <graphic>
                    <FontIcon iconLiteral="fas-trash" iconSize="14"/>
                </graphic>
            </Button>
            <Button fx:id="btnEditProduct"
                    text="Upraviť produkt"
                    onAction="#handleEditProduct"
                    prefWidth="200"
                    styleClass="master-button"
                    contentDisplay="LEFT"
                    graphicTextGap="10">
                <graphic>
                    <FontIcon iconLiteral="fas-pen" iconSize="14"/>
                </graphic>
            </Button>
        </VBox>
    </children>
</AnchorPane>
